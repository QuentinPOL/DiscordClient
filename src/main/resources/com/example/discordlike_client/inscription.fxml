<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: #2C2F33;" fx:controller="com.example.discordlike_client.controller.Inscription">
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label text="Créer un compte" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

        <TextField fx:id="usernameField" promptText="Nom d'utilisateur" style="-fx-background-color: #40444B; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10; -fx-pref-width: 400;"/>
        <TextField fx:id="emailField" promptText="E-mail" style="-fx-background-color: #40444B; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10; -fx-pref-width: 400;"/>
        <PasswordField fx:id="passwordField" promptText="Mot de passe" style="-fx-background-color: #40444B; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10; -fx-pref-width: 400;"/>

        <Button fx:id="signUpButton" text="S'inscrire" style="-fx-background-color: #5865F2; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-pref-width: 200; -fx-background-radius: 5;"/>

        <Hyperlink fx:id="backToLoginLink" text="Retour à la connexion" onAction="#onBackToLoginClick" style="-fx-font-size: 12px; -fx-text-fill: #3B82F6;"/>
    </VBox>
</AnchorPane>
